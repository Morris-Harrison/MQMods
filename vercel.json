{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "env": {
    "STRIPE_SECRET_KEY": "@stripe_secret_key",
    "GMAIL_APP_PASSWORD": "@gmail_app_password",
    "YOUR_DOMAIN": "@your_domain",
    "GMAIL_USER": "@gmail_user"
  },
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
